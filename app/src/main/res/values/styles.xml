<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ModelFilterMenu">
        <item name="android:textColor">#353535</item>
        <item name="android:textColorHint">#353535</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">4dp</item>
        <!--<item name="android:layout_width">0dp</item>-->
        <!--<item name="android:layout_weight">1</item>-->
        <item name="android:padding">12dp</item>
        <!--<item name="android:drawableRight">@mipmap/indicator_d_d</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="Tab_Style">
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp10</item>
        <item name="android:textColor">@color/tab_txt_color</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="Progress" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:progress">@mipmap/sx_icon</item>
    </style>

    <style name="selectDialog" parent="Theme.AppCompat.Light">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>

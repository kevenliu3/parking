<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eaeaea"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:showDividers="middle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_psd"
            android:layout_width="@dimen/dp56"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp10"
            android:paddingTop="@dimen/dp10"
            android:src="@mipmap/back_arrow_333" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingBottom="@dimen/dp15"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/dp10"
            android:paddingTop="@dimen/dp15"
            android:text="修改密码"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp18" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="@dimen/dp10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="旧密码"
            android:textColor="@color/color_333"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/oldPsw_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:digits="@string/filter_vcode"
            android:drawablePadding="10dp"
            android:gravity="center|end"
            android:hint="请输入旧密码"
            android:inputType="number"
            android:padding="@dimen/dp10"
            android:singleLine="true"
            android:textColor="@color/color_333"
            android:textSize="16sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_eaeaea" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="@dimen/dp10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="新密码"
            android:textColor="@color/color_333"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/new_psw_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:digits="@string/filter_vcode"
            android:drawablePadding="10dp"
            android:gravity="center|end"
            android:hint="请设置新密码"
            android:inputType="number"
            android:padding="@dimen/dp10"
            android:singleLine="true"
            android:textColor="@color/color_333"
            android:textSize="16sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_eaeaea" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="@dimen/dp10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="确认新密码"
            android:textColor="@color/color_333"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/comfire_new_psw_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:digits="@string/filter_vcode"
            android:drawablePadding="10dp"
            android:gravity="center|end"
            android:hint="请再次确认新密码"
            android:inputType="number"
            android:padding="@dimen/dp10"
            android:singleLine="true"
            android:textColor="@color/color_333"
            android:textSize="16sp" />


    </LinearLayout>

    <Button
        android:id="@+id/submmit_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp50"
        android:background="@drawable/bg_commit_btn"
        android:elevation="1dp"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>